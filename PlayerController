using UnityEngine;

public class PlayerController : MonoBehaviour
{
    // Player Movement

    public float walkSpeed = 8f;
    public float runSpeed = 15f;
    public float crouchSpeed = 1f;

    private Rigidbody2D rb;
    private float moveInput;
    private bool isCrouching;


    void Start()
    {
        rb = GetComponent<Rigidbody2D>();
    }
    void Update()
    {
       
        //Walking
        if (Input.GetKey(KeyCode.W))
        {
            transform.position += Vector3.up * walkSpeed * Time.deltaTime;

        }

        else if (Input.GetKey(KeyCode.A))
        {
            transform.position += Vector3.left * walkSpeed * Time.deltaTime;

        }

        else if (Input.GetKey(KeyCode.S))
        {
            transform.position += Vector3.down * walkSpeed * Time.deltaTime;

        }

        else if (Input.GetKey(KeyCode.D))
        {
            transform.position += Vector3.right * walkSpeed * Time.deltaTime;

        }

        //Crouching
        moveInput = Input.GetAxisRaw("Horizontal");
        isCrouching = Input.GetKey(KeyCode.LeftControl);

        if (isCrouching)
            transform.localScale = new Vector3(1f, 0.5f, 1f);
        else
            transform.localScale = new Vector3(5f, 5f, 5f); //Normal Standing
            transform.localScale = new Vector3(5f, 5f, 5f); //Normal Standing

        if (moveInput > 0)
        {
        // Moving right
            transform.localScale = new Vector3(1, transform.localScale.y, 1);
        }
        else if (moveInput < 0)
        {
        // Moving left
            transform.localScale = new Vector3(-1, transform.localScale.y, 1);
        }

    }
void FixedUpdate()
    { 
        //Running using shift and crouching
        float currentSpeed = walkSpeed;

        if (Input.GetKey(KeyCode.LeftShift))
            currentSpeed = runSpeed;

        if (isCrouching)
            currentSpeed = crouchSpeed;

        rb.linearVelocity = new Vector2(moveInput * currentSpeed, rb.linearVelocity.y);

    }
}
